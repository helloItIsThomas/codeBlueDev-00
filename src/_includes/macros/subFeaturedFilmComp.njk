{% macro sffC(film) %}

      <div class="subFeaturedFilmComp">
            <a href="/films/{{ film.slug.current }}">
                  <img src="{{ film.posterImage }}" alt="{{ film.title }} poster">
            </a>
            <div class="b1_0">
            FILM
      </div>
            <div class="h0_5">
                  {{ film.title }}
            </div>
            <div class="b2_0">
                  {{ film.description }}
            </div>
            <button class="ctaButton b1_0">
                  <a href="/films/{{film.slug.current}}" data-replace="LEARN MORE">
                        <span>LEARN MORE</span>
                  </a>
            </button>
      </div>
{% endmacro %}