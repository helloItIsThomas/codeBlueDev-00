---
layout: layouts/base.njk
title: "The Code Blue Story"
---
{% from 'macros/heroImg.njk' import heroImg %}
{% from 'macros/staticHeaderComp.njk' import staticHeaderComp %}

<script type="module">
      import {styleThisPageNavLink} from "../../js/utils.js";
      styleThisPageNavLink(document.querySelector(".navLinks a[href='/pages/story'] span"));
</script>
<script type="module">
      import {sv} from "/js/cursor/variables.js";
      document.addEventListener("DOMContentLoaded", async () => {
            const pageLoadingScreen = document.getElementById("pageLoadingScreen");

            window.scrollTo({
                  top: 0, // Replace with your desired vertical scroll position
                  behavior: "instant"
            });
            // pageLoadingScreen.style.display = "none";
            pageLoadingScreen.style.display = "block";
            document.body.style.overflow = "hidden";
            sv
                  .lenis
                  .stop();
            window.scrollTo({
                  top: 0, // Replace with your desired vertical scroll position
                  behavior: "instant"
            });

            gsap.to(pageLoadingScreen, {
                  opacity: 0,
                  duration: 0.5,
                  ease: "power3.out",
                  delay: 2,
                  onComplete: () => {
                        pageLoadingScreen.style.display = "none";
                        document.body.style.overflow = "auto";
                        sv
                              .lenis
                              .start();
                  }
            });
      });
</script>

{{ heroImg(someData.story.heroImage) }}
{{ staticHeaderComp(someData.headers.story, someData.story) }}

<div class="vSpacer1"></div>

<div class="margin0LR">
      <div class="bser2 margin1LR padding1LRRight">
            {{ someData.story.description  }}
      </div>
</div>

<div class="vSpacer2"></div>

<div class="margin0LR">
      <div class="threeSevenGrid margin1LR">
            <div>
                  <div class="h0_5">Shari Sant</div>
                  <img src="{{someData.story.shariPhoto}}" alt="Photograph of Shari">
            </div>
            <div class="bs3 padding1LRRight">
                  {{someData.story.shariBio}}
            </div>
      </div>
</div>